<UserControl x:Class="Julie.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F8FAFC" Offset="0"/>
            <GradientStop Color="#F1F5F9" Offset="0.5"/>
            <GradientStop Color="#E2E8F0" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
      <UserControl.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#CBD5E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#CBD5E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <ContentPresenter Margin="{TemplateBinding Padding}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"/>
                                <ToggleButton Grid.Column="1" 
                                            BorderThickness="0"
                                            Background="Transparent"
                                            IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                            ClickMode="Press">
                                    <Path Data="M 0 0 L 4 4 L 8 0 Z" Fill="#666" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,10,0"/>
                                </ToggleButton>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Save Button Style -->
        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E7E34"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer Margin="30" VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="600">
            
            <!-- Header -->
            <Border Background="#F8F9FA" CornerRadius="12" Padding="25" Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="âš™ï¸ Settings" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="#2D3748"/>
                    <TextBlock Text="Configure your Julie AI Assistant preferences" 
                              FontSize="14" 
                              Foreground="#718096" 
                              Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- API Configuration Section -->
            <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="ðŸ”‘" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="API Configuration" 
                                  FontSize="20" 
                                  FontWeight="SemiBold"
                                  Foreground="#2D3748"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <TextBlock Text="Enter your OpenAI API key to enable AI functionality" 
                              FontSize="13" 
                              Foreground="#718096" 
                              Margin="0,0,0,15"/>
                      <TextBlock Text="API Key:" 
                              FontWeight="Medium" 
                              Foreground="#4A5568" 
                              Margin="0,0,0,8"/>                    <TextBox x:Name="ApiKeyBox" 
                            Style="{StaticResource ModernTextBoxStyle}"
                            Width="400"
                            HorizontalAlignment="Left"
                            FontFamily="Consolas"
                            Text="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,0,0,15"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’¡" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Your API key is stored securely and only used for AI requests" 
                                  FontSize="12" 
                                  Foreground="#A0AEC0"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Audio Settings Section -->
            <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="ðŸŽ¤" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Audio Settings" 
                                  FontSize="20" 
                                  FontWeight="SemiBold"
                                  Foreground="#2D3748"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <TextBlock Text="Configure audio input and output devices for voice interactions" 
                              FontSize="13" 
                              Foreground="#718096" 
                              Margin="0,0,0,20"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Input Device:" 
                                      FontWeight="Medium" 
                                      Foreground="#4A5568" 
                                      Margin="0,0,0,8"/>                            <ComboBox x:Name="InputDeviceCombo" 
                                     Style="{StaticResource ModernComboBoxStyle}"
                                     Height="40"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Output Device:" 
                                      FontWeight="Medium" 
                                      Foreground="#4A5568" 
                                      Margin="0,0,0,8"/>
                            <ComboBox x:Name="OutputDeviceCombo" 
                                     Style="{StaticResource ModernComboBoxStyle}"
                                     Height="40"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Save Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="ðŸ’¾ Save Settings" 
                       Name="SaveButton"
                       Style="{StaticResource SaveButtonStyle}"
                       Click="SaveButton_Click"/>            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
