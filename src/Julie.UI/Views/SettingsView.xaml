<Page x:Class="Julie.UI.Views.SettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ScrollViewer Margin="20">
        <StackPanel>
            
            <TextBlock Text="Settings" 
                      FontSize="24" 
                      FontWeight="Bold"
                      Margin="0,0,0,20"/>
            
            <!-- API Configuration -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="API Configuration" 
                          FontSize="18" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,10"/>
                
                <TextBlock Text="API Key:" Margin="0,0,0,5"/>
                <PasswordBox x:Name="ApiKeyBox" 
                           PlaceholderText="Enter your API key"
                           Width="300"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,10"/>
            </StackPanel>
            
            <!-- Audio Settings -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Audio Settings" 
                          FontSize="18" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,10"/>
                
                <TextBlock Text="Input Device:" Margin="0,0,0,5"/>
                <ComboBox x:Name="InputDeviceCombo" 
                         Width="300"
                         HorizontalAlignment="Left"
                         Margin="0,0,0,10"/>
                
                <TextBlock Text="Output Device:" Margin="0,0,0,5"/>
                <ComboBox x:Name="OutputDeviceCombo" 
                         Width="300"
                         HorizontalAlignment="Left"
                         Margin="0,0,0,10"/>
            </StackPanel>
            
            <!-- Save Button -->
            <Button Content="Save Settings" 
                   Margin="0,20,0,0"/>
            
        </StackPanel>
    </ScrollViewer>
</Page>
